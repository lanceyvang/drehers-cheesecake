const categories = [
  { name: 'Cheesecakes', slug: 'cheesecake', icon: 'üç∞', description: 'Our signature New York style' },
  { name: 'Custom Cakes', slug: 'custom-cakes', icon: 'üéÇ', description: 'Personalized for your event' },
  { name: 'Vegan Options', slug: 'vegan', icon: 'üå±', description: 'Plant-based indulgence' },
