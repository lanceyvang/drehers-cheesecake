---
import Layout from '../../../layouts/Layout.astro';

// This page uses client-side auth and data fetching
export const prerender = true;
---

<Layout title="My Orders" description="View your order history and track current orders.">
  <!-- Hero Section -->
  <section class="pt-32 pb-8 bg-gradient-to-b from-cream to-cream-light">
    <div class="container">
      <nav class="flex items-center gap-2 text-sm text-slate mb-6">
        <a href="/" class="hover:text-chocolate transition-colors">Home</a>
        <span>/</span>
        <a href="/account" class="hover:text-chocolate transition-colors">Account</a>
        <span>/</span>
        <span class="text-chocolate">Orders</span>
      </nav>
      
      <div class="text-center">
        <p class="font-accent text-lg text-gold-dark italic mb-2">Your Orders</p>
        <h1 class="font-display text-3xl md:text-4xl font-bold text-chocolate">
          Order History
        </h1>
      </div>
    </div>
  </section>

  <!-- Orders Content -->
  <section class="py-12 bg-cream-light min-h-[50vh]">
    <div class="container max-w-4xl">
      
      <!-- Loading State -->
      <div id="loading-state" class="text-center py-12">
        <div class="inline-block w-8 h-8 border-4 border-gold border-t-transparent rounded-full animate-spin"></div>
        <p class="text-slate mt-4">Loading your orders...</p>
      </div>

      <!-- Not Logged In State -->
      <div id="auth-required" class="hidden text-center py-12">
        <div class="w-16 h-16 mx-auto bg-cream rounded-full flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-slate" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <h2 class="font-display text-2xl font-bold text-chocolate mb-2">Sign In Required</h2>
        <p class="text-slate mb-6">Please sign in to view your orders.</p>
        <a href="/account" class="btn btn-primary">Sign In</a>
      </div>

      <!-- Empty State -->
      <div id="empty-state" class="hidden text-center py-12">
        <div class="w-16 h-16 mx-auto bg-cream rounded-full flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-slate" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
        </div>
        <h2 class="font-display text-2xl font-bold text-chocolate mb-2">No Orders Yet</h2>
        <p class="text-slate mb-6">You haven't placed any orders yet. Time to treat yourself!</p>
        <a href="/products" class="btn btn-primary">Browse Products</a>
      </div>

      <!-- Orders List -->
      <div id="orders-list" class="hidden space-y-6">
        <!-- Orders will be inserted here -->
      </div>

    </div>
  </section>
</Layout>

<script>
  import { createAuthClient } from 'better-auth/client';

  const authClient = createAuthClient({
    baseURL: window.location.origin,
  });

  const loadingEl = document.getElementById('loading-state');
  const authRequiredEl = document.getElementById('auth-required');
  const emptyEl = document.getElementById('empty-state');
  const ordersListEl = document.getElementById('orders-list');

  // Status badge colors
  const statusColors: Record<string, string> = {
    pending: 'bg-yellow-100 text-yellow-800',
    deposit_paid: 'bg-blue-100 text-blue-800',
    confirmed: 'bg-green-100 text-green-800',
    preparing: 'bg-purple-100 text-purple-800',
    ready: 'bg-indigo-100 text-indigo-800',
    delivered: 'bg-emerald-100 text-emerald-800',
    cancelled: 'bg-red-100 text-red-800',
  };

  const statusLabels: Record<string, string> = {
    pending: 'Pending',
    deposit_paid: 'Deposit Paid',
    confirmed: 'Confirmed',
    preparing: 'Preparing',
    ready: 'Ready for Delivery',
    delivered: 'Delivered',
    cancelled: 'Cancelled',
  };

  function formatOrderCard(order: any): string {
    const statusColor = statusColors[order.status] || 'bg-gray-100 text-gray-800';
    const statusLabel = statusLabels[order.status] || order.status;
    const date = new Date(order.createdAt).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    });

    const itemsPreview = order.items?.slice(0, 2).map((item: any) => 
      `${item.name} x${item.quantity}`
    ).join(', ') || 'Items unavailable';
    
    const moreItems = order.items?.length > 2 ? ` +${order.items.length - 2} more` : '';

    return `
      <a href="/account/orders/${order.orderNumber}" class="block bg-white rounded-2xl shadow-sm hover:shadow-md transition-shadow p-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-2">
              <span class="font-display font-semibold text-chocolate">${order.orderNumber}</span>
              <span class="px-2 py-1 rounded-full text-xs font-medium ${statusColor}">
                ${statusLabel}
              </span>
            </div>
            <p class="text-sm text-slate mb-1">${date}</p>
            <p class="text-sm text-slate">${itemsPreview}${moreItems}</p>
          </div>
          
          <div class="flex items-center gap-4">
            <div class="text-right">
              <p class="text-sm text-slate">Total</p>
              <p class="font-semibold text-chocolate">$${order.totalAmount?.toFixed(2) || '0.00'}</p>
            </div>
            <svg class="w-5 h-5 text-slate" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </div>
        
        ${order.deliveryDate ? `
        <div class="mt-4 pt-4 border-t border-cream-dark flex items-center gap-2 text-sm text-slate">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>Delivery: ${order.deliveryDate}</span>
          ${order.deliveryBorough ? `<span>â€¢ ${order.deliveryBorough}</span>` : ''}
        </div>
        ` : ''}
      </a>
    `;
  }

  async function loadOrders() {
    try {
      // Check if user is logged in
      const { data: session } = await authClient.getSession();
      
      if (!session?.user) {
        loadingEl?.classList.add('hidden');
        authRequiredEl?.classList.remove('hidden');
        return;
      }

      // For demo, we'll use localStorage orders
      // In production, fetch from: /api/orders?userId=${session.user.id}
      const storedOrders = localStorage.getItem('orders');
      const orders = storedOrders ? JSON.parse(storedOrders) : [];

      loadingEl?.classList.add('hidden');

      if (orders.length === 0) {
        emptyEl?.classList.remove('hidden');
      } else {
        ordersListEl?.classList.remove('hidden');
        if (ordersListEl) {
          ordersListEl.innerHTML = orders.map(formatOrderCard).join('');
        }
      }
    } catch (error) {
      console.error('Error loading orders:', error);
      loadingEl?.classList.add('hidden');
      
      // Fallback: try localStorage for demo
      const user = localStorage.getItem('user');
      if (!user) {
        authRequiredEl?.classList.remove('hidden');
      } else {
        emptyEl?.classList.remove('hidden');
      }
    }
  }

  loadOrders();
</script>
