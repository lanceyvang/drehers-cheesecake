---
import Layout from '../../layouts/Layout.astro';

const orderNumber = Astro.url.searchParams.get('order') || 'Unknown';
---

<Layout title="Order Confirmed">
  <section class="min-h-[80vh] flex items-center justify-center py-20 bg-cream-light">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <!-- Success Animation -->
        <div class="w-24 h-24 mx-auto mb-8 rounded-full bg-green-100 flex items-center justify-center animate-fade-in-up">
          <svg class="w-12 h-12 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        
        <h1 class="font-display text-4xl md:text-5xl font-bold text-chocolate mb-4 animate-fade-in-up animation-delay-100">
          Thank You!
        </h1>
        
        <p class="text-xl text-slate mb-8 animate-fade-in-up animation-delay-200">
          Your order has been successfully placed.
        </p>
        
        <!-- Order Details Card -->
        <div class="bg-white rounded-2xl shadow-sm p-8 mb-8 text-left animate-fade-in-up animation-delay-300">
          <div class="flex items-center justify-between mb-6 pb-6 border-b border-cream-dark">
            <div>
              <p class="text-sm text-slate">Order Number</p>
              <p class="font-display text-2xl font-bold text-gold-dark">{orderNumber}</p>
            </div>
            <div class="w-16 h-16 rounded-full bg-gold/10 flex items-center justify-center">
              <svg class="w-8 h-8 text-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
              </svg>
            </div>
          </div>
          
          <div class="space-y-4">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-berry/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-berry" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
              </div>
              <div>
                <p class="font-semibold text-chocolate">Confirmation Email Sent</p>
                <p class="text-sm text-slate">Check your inbox for order details and tracking information.</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-gold/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-gold-dark" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <p class="font-semibold text-chocolate">What's Next?</p>
                <p class="text-sm text-slate">
                  We'll start preparing your order and contact you to confirm delivery details.
                </p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
                </svg>
              </div>
              <div>
                <p class="font-semibold text-chocolate">Fresh Delivery</p>
                <p class="text-sm text-slate">
                  Your order will be delivered fresh to your door on your selected date.
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Actions -->
        <div class="flex flex-wrap justify-center gap-4 animate-fade-in-up animation-delay-400">
          <a href="/products" class="btn btn-primary">
            Continue Shopping
          </a>
          <a href="/account/orders" class="btn btn-secondary">
            View My Orders
          </a>
        </div>
        
        <!-- Contact Info -->
        <p class="mt-8 text-sm text-slate animate-fade-in-up animation-delay-400">
          Questions about your order? Contact us at 
          <a href="mailto:DrehersCheesecake@gmail.com" class="text-gold-dark hover:underline">
            DrehersCheesecake@gmail.com
          </a>
        </p>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Clear the cart after successful purchase
  localStorage.removeItem('cart');
  window.dispatchEvent(new CustomEvent('cart-updated'));
</script>
