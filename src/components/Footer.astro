---
const currentYear = new Date().getFullYear();

const footerLinks = {
  shop: [
    { href: '/products?category=cheesecake', label: 'Cheesecakes' },
    { href: '/products?category=custom-cakes', label: 'Custom Cakes' },
    { href: '/products?category=vegan', label: 'Vegan Options' },
    { href: '/products?category=cupcakes', label: 'Cupcakes' },
  ],
  info: [
    { href: '/about', label: 'Our Story' },
    { href: '/gallery', label: 'Gallery' },
    { href: '/faq', label: 'FAQ' },
    { href: '/contact', label: 'Contact Us' },
  ],
  policies: [
    { href: '/policies/ordering', label: 'Ordering & Deposits' },
    { href: '/policies/delivery', label: 'Delivery Info' },
    { href: '/policies/refunds', label: 'Refund Policy' },
    { href: '/policies/privacy', label: 'Privacy Policy' },
  ],
};
---

<footer class="footer">
  <div class="container">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12 pb-12 border-b border-chocolate-light/30">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-14 h-14 rounded-full overflow-hidden shadow-lg ring-2 ring-gold/30">
            <img src="/images/logo.png" alt="Dreher's Cheesecake" class="w-full h-full object-cover" />
          </div>
          <div>
            <h2 class="font-display text-2xl font-semibold text-cream">Dreher's</h2>
            <p class="text-gold text-sm tracking-widest uppercase">Cheesecake LLC</p>
          </div>
        </div>
        <p class="text-cream/80 mb-6 max-w-sm leading-relaxed">
          Baking memories, one dessert at a time. Brooklyn's finest artisan cheesecakes, 
          crafted with love and delivered across all five NYC boroughs.
        </p>
        
        <!-- Social Links -->
        <div class="flex gap-4">
          <a href="https://instagram.com/DrehersCheesecake" target="_blank" rel="noopener noreferrer" 
             class="w-10 h-10 rounded-full bg-chocolate-light flex items-center justify-center text-cream hover:bg-gold hover:text-white transition-colors"
             aria-label="Instagram">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"/>
            </svg>
          </a>
          <a href="https://tiktok.com/@DrehersCheesecake" target="_blank" rel="noopener noreferrer"
             class="w-10 h-10 rounded-full bg-chocolate-light flex items-center justify-center text-cream hover:bg-gold hover:text-white transition-colors"
             aria-label="TikTok">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/>
            </svg>
          </a>
          <a href="mailto:DrehersCheesecake@gmail.com"
             class="w-10 h-10 rounded-full bg-chocolate-light flex items-center justify-center text-cream hover:bg-gold hover:text-white transition-colors"
             aria-label="Email">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Shop Links -->
      <div>
        <h3 class="footer-title">Shop</h3>
        <ul class="space-y-3">
          {footerLinks.shop.map(link => (
            <li>
              <a href={link.href} class="text-cream/70 hover:text-gold transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Info Links -->
      <div>
        <h3 class="footer-title">Information</h3>
        <ul class="space-y-3">
          {footerLinks.info.map(link => (
            <li>
              <a href={link.href} class="text-cream/70 hover:text-gold transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Policy Links -->
      <div>
        <h3 class="footer-title">Policies</h3>
        <ul class="space-y-3">
          {footerLinks.policies.map(link => (
            <li>
              <a href={link.href} class="text-cream/70 hover:text-gold transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="pt-8 flex flex-col md:flex-row items-center justify-between gap-4">
      <div class="flex items-center gap-2 text-cream/60 text-sm">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
        </svg>
        <span>Brooklyn, New York</span>
        <span class="mx-2">|</span>
        <span>Delivering to all 5 boroughs</span>
      </div>
      
      <p class="text-cream/60 text-sm">
        &copy; {currentYear} Dreher's Cheesecake LLC. All rights reserved.
      </p>
    </div>

  </div>
</footer>
